{
  "name": "@stellive/ui",
  "version": "0.1.0",
  "description": "Shared Stellive UI toolkit with design tokens, theming utilities, and primitive components.",
  "type": "module",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./tokens": {
      "types": "./dist/tokens.d.ts",
      "import": "./dist/tokens.js",
      "default": "./dist/tokens.js"
    },
    "./theme": {
      "types": "./dist/theme/index.d.ts",
      "import": "./dist/theme/index.js",
      "default": "./dist/theme/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js",
      "default": "./dist/react/index.js"
    },
    "./design-tokens.json": "./design-tokens.json"
  },
  "files": [
    "dist",
    "design-tokens.json",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc -p tsconfig.build.json && node ./scripts/sync-tokens.mjs --with-dist",
    "sync:tokens": "node ./scripts/sync-tokens.mjs"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "rimraf": "^6.0.1",
    "typescript": "~5.8.3"
  }
}
