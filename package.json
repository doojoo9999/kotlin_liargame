{
  "name": "kotlin_liargame",
  "version": "1.0.0",
  "description": "Liar Game with visual testing suite",
  "scripts": {
    "test:visual": "playwright test",
    "test:visual:ui": "playwright test --ui",
    "test:visual:headed": "playwright test --headed",
    "test:visual:report": "playwright show-report",
    "capture:login": "node scripts/capture-login-ui.js",
    "analyze:ui": "npm run capture:login",
    "diagnose:css": "node scripts/diagnose-css-issues.js",
    "install:playwright": "playwright install",
    "setup:testing": "npm install && npm run install:playwright",
    "validate:ui": "npm run analyze:ui && npm run diagnose:css"
  },
  "dependencies": {
    "cloc": "^2.6.0-cloc",
    "dotenv": "^16.4.5",
    "puppeteer": "^24.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.55.0",
    "eslint": "^9.35.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "playwright": "^1.55.0",
    "shadcn": "^3.3.0"
  }
}
